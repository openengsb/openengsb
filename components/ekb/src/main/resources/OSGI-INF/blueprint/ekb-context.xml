<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
  
  <!-- EDB Converter -->
  <bean id="edbConverter" class="org.openengsb.core.ekb.internal.converter.EDBConverter">
    <property name="edbService" ref="edbService"/>
  </bean>
  
  <!-- Query Interface -->
  <bean id="queryInterfaceService" class="org.openengsb.core.ekb.internal.QueryInterfaceService">
    <property name="edbService" ref="edbService"/>
    <property name="edbConverter" ref="edbConverter"/>
  </bean>
  
  <service interface="org.openengsb.core.api.ekb.QueryInterface">
    <service-properties>
      <entry key="location.root" value="ekbQueryService" />
    </service-properties>
    <ref component-id="queryInterfaceService"/>
  </service>
  
  <!-- Persist Interface -->
  <bean id="persistInterfaceService" class="org.openengsb.core.ekb.internal.PersistInterfaceService">
    <property name="edbService" ref="edbService"/>
    <property name="edbConverter" ref="edbConverter"/>
  </bean>
  
  <service interface="org.openengsb.core.api.ekb.PersistInterface">
    <service-properties>
      <entry key="location.root" value="ekbPersistService" />
    </service-properties>
    <ref component-id="persistInterfaceService"/>
  </service>
  
  <!-- Model Registry -->
  <bean id="modelRegistryService" class="org.openengsb.core.ekb.internal.ModelRegistryService" factory-method="getInstance">
    <property name="ekbClassLoader" ref="classLoader" />
    <property name="graphDb" ref="graphDB" />
  </bean>
  
  <service interface="org.openengsb.core.api.ekb.ModelRegistry">
    <ref component-id="modelRegistryService"/>
  </service>
  
  <!-- Transformation Engine -->
  <bean id="transformationEngineService" class="org.openengsb.core.ekb.internal.TransformationEngineService">
    <property name="modelRegistry" ref="modelRegistryService" />
    <property name="graphDb" ref="graphDB" />
  </bean>
  
  <service interface="org.openengsb.core.api.ekb.TransformationEngine">
    <service-properties>
      <entry key="location.root" value="ekbTransformationService" />
    </service-properties>
    <ref component-id="transformationEngineService"/>
  </service>
  
  <!-- EKB ClassLoader -->
  <bean id="classLoader" class="org.openengsb.core.ekb.internal.loader.EKBClassLoaderService">
   	<argument ref="blueprintBundleContext" />  
  </bean>
  
  <bean id="graphDB" class="org.openengsb.core.ekb.internal.graph.EKBModelGraph" factory-method="getInstance" />
  
  <service id="transformationDeployerService" interface="org.apache.felix.fileinstall.ArtifactInstaller">
    <bean class="org.openengsb.core.ekb.internal.deployer.TransformationDeployerService">
      <property name="engine" ref="transformationEngineService" />
    </bean>
  </service>
  
  <!-- References to other bundles -->
  <reference id="edbService" interface="org.openengsb.core.api.edb.EngineeringDatabaseService" />
  
</blueprint>
