<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>org.openengsb.domain</groupId>
    <artifactId>openengsb-domain-parent</artifactId>
    <version>1.1.6-SNAPSHOT</version>
  </parent>

  <properties>
    <bundle.symbolicName>org.openengsb.domain.scm</bundle.symbolicName>
    <bundle.namespace>org.openengsb.domain.scm</bundle.namespace>
  </properties>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.openengsb.domain</groupId>
  <artifactId>openengsb-domain-scm</artifactId>
  <version>1.1.6-SNAPSHOT</version>

  <name>OpenEngSB :: Domain :: Scm</name>

  <packaging>bundle</packaging>

  <description>
    SCM Domain is an abstraction for basic interaction with revision control systems (e.g. Git, Subversion).
    It polls external repositories for changes of content under source control and provides functionality 
    to copy/export the repository content for further processing. 
  </description>
  <url>http://www.openengsb.org</url>
  <licenses>
    <license>
      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git://github.com/openengsb/openengsb.git</connection>
    <developerConnection>scm:git:git@github.com:openengsb/openengsb.git</developerConnection>
    <url>http://github.com/openengsb/openengsb</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.openengsb.core</groupId>
      <artifactId>openengsb-core-common</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openengsb.core</groupId>
      <artifactId>openengsb-core-events</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

</project>

