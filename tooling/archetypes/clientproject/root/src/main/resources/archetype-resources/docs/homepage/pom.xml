  </parent>

  <groupId>${groupId}.docs</groupId>
  <artifactId>${artifactId}-docs-homepage</artifactId>
  <version>${version}</version>
  <name>${name} :: Documentation :: Homepage</name>
  <packaging>pom</packaging>

  <description>Homepage for the ${name}</description>

